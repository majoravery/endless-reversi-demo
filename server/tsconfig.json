{
	"compilerOptions": {
		"module": "node18",
		"moduleDetection": "force",
		"target": "es6",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
	},
    "include": ["types", "src/**/*.ts", "server.ts"]
}
